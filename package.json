    "eslint": "^8.24.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.3"
  }
}
